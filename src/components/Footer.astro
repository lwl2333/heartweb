---
interface Props {
  names: string[];
  quote: string;
}

const { names, quote } = Astro.props;
---

<footer class="footer">
  <div class="footer-decor">
    <div class="decor-circle"></div>
  </div>
  
  <div class="container footer-content">
    <h3 class="handwriting">Forever & Always</h3>
    <p class="footer-names">{names[0]} & {names[1]}</p>
    <blockquote class="footer-quote">
      "{quote}"
    </blockquote>
    <div class="footer-heart">‚ù§</div>
  </div>
</footer>

<style>
  .footer {
    position: relative;
    padding: var(--space-2xl) 0 var(--space-xl);
    background: linear-gradient(135deg, var(--bg-blush) 0%, var(--color-secondary) 100%);
    overflow: hidden;
    text-align: center;
  }

  .footer-decor {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .decor-circle {
    position: absolute;
    width: 500px;
    height: 500px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
    top: -200px;
    left: 50%;
    transform: translateX(-50%);
  }

  .footer-content {
    position: relative;
    z-index: 10;
  }

  .footer-content h3 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-primary);
    margin-bottom: var(--space-xs);
  }

  .footer-names {
    font-family: var(--font-display);
    font-size: 1.25rem;
    color: var(--text-primary);
    margin-bottom: var(--space-lg);
    letter-spacing: 0.1em;
  }

  .footer-quote {
    max-width: 600px;
    margin: 0 auto var(--space-lg);
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-style: italic;
    color: var(--text-secondary);
    line-height: 1.8;
  }

  .footer-heart {
    font-size: 2rem;
    animation: pulse 2s ease-in-out infinite;
    filter: drop-shadow(0 0 10px rgba(183, 110, 121, 0.4));
  }
</style>
